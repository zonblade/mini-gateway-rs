#!/sbin/openrc-run

name="gwrs-core"
description="GWRS Mini-Gateway Core"
command="/usr/local/bin/router-core"
command_args=""
pidfile="/run/${RC_SVCNAME}.pid"
command_background="yes"
output_log="/var/tmp/gwrs/log/core.log"
error_log="/var/tmp/gwrs/log/core.error.log"

depend() {
    need net
    after firewall
}

start_pre() {
    checkpath -d -m 0755 -o root:root /var/tmp/gwrs/log
}